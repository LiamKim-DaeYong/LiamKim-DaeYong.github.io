---
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "@/utils/slugify";
import { getPath } from "@/utils/getPath";
import Datetime from "./Datetime.astro";

type Props = {
  variant?: "h2" | "h3";
} & CollectionEntry<"blog">;

const { variant: Heading = "h2", id, data, filePath } = Astro.props;

const { title, description, tags, ...props } = data;
---

<li class="my-2">
  <a
    href={getPath(id, filePath)}
    class="group block rounded-xl border border-border/70 bg-background p-5 transition-all duration-200 hover:-translate-y-0.5 hover:border-accent/40 hover:shadow-lg hover:shadow-black/5 dark:hover:shadow-black/30"
  >
    <Heading
      style={{ viewTransitionName: slugifyStr(title.replaceAll(".", "-")) }}
      class="text-base font-semibold leading-snug text-foreground/90 transition-colors duration-200 group-hover:text-accent sm:text-[1.0625rem]"
    >
      {title}
    </Heading>
    <div class="mt-1.5">
      <Datetime {...props} />
    </div>
    {
      description && (
        <p class="mt-2 line-clamp-2 text-sm leading-relaxed text-foreground/50">
          {description}
        </p>
      )
    }
    {
      tags && tags.length > 0 && (
        <div class="mt-3 flex flex-wrap gap-1.5">
          {tags.map(tag => (
            <span class="rounded-md bg-muted px-2 py-0.5 text-xs font-medium text-foreground/55">
              #{tag}
            </span>
          ))}
        </div>
      )
    }
  </a>
</li>
