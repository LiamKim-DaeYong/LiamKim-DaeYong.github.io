---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);

const techStack = ["Kotlin", "Spring Boot", "JPA", "SQL", "Redis"];
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">

    <!-- Hero -->
    <section id="hero" class="border-b border-border/60 py-14">
      <p class="mb-3 text-sm font-medium tracking-wide text-accent/80">
        백엔드 개발자
      </p>
      <p class="max-w-xl text-[1.0625rem] leading-8 text-foreground/70">
        전산실, 의료 AI, 제조, 물류 도메인을 거쳐온 백엔드 개발자입니다.<br />
        주로 <span class="font-semibold text-foreground/90">Kotlin · Spring</span>을 씁니다.
        공부한 내용을 직접 확인하고 기록합니다.
      </p>
      <div class="mt-5 flex flex-wrap gap-2">
        {techStack.map(tech => (
          <span class="inline-flex items-center rounded-md border border-border/70 bg-muted px-2.5 py-1 text-xs font-medium text-foreground/55">
            {tech}
          </span>
        ))}
      </div>
      {SOCIALS.length > 0 && <div class="mt-5"><Socials /></div>}
    </section>

    <!-- Featured Posts -->
    {
      featuredPosts.length > 0 && (
        <section
          id="featured"
          class:list={[
            "pt-10 pb-6",
            { "border-b border-border/60": recentPosts.length > 0 },
          ]}
        >
          <div class="mb-4 flex items-center justify-between">
            <h2 class="text-xs font-semibold uppercase tracking-widest text-foreground/40">
              주요 글
            </h2>
          </div>
          <ul>
            {featuredPosts.map(data => (
              <Card variant="h3" {...data} />
            ))}
          </ul>
        </section>
      )
    }

    <!-- Recent Posts -->
    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-10 pb-6">
          <div class="mb-4 flex items-center justify-between">
            <h2 class="text-xs font-semibold uppercase tracking-widest text-foreground/40">
              최근 글
            </h2>
            <a
              href="/posts/"
              class="flex items-center gap-1 text-xs text-foreground/40 transition-colors hover:text-accent"
            >
              전체 보기
              <IconArrowRight class="inline-block size-3.5 rtl:-rotate-180" />
            </a>
          </div>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
