---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <section id="hero" class="border-b border-border pt-10 pb-8">
      <p class="max-w-xl text-base leading-relaxed text-foreground/75">
        학사 시스템, AI, 제조, 물류 도메인을 거쳐온 백엔드 개발자입니다.<br />
        주로 <span class="font-semibold text-accent">Kotlin · Spring</span>을 쓰며,
        코드와 구조에서 확인한 내용을 직접 실험하고 기록합니다.
      </p>
      <div class="mt-5 flex items-center gap-4">
        {SOCIALS.length > 0 && <Socials />}
        <a
          target="_blank"
          href="/rss.xml"
          class="flex items-center gap-1.5 text-sm text-foreground/40 transition-colors hover:text-accent"
          aria-label="rss feed"
          title="RSS Feed"
        >
          <IconRss width={14} height={14} class="stroke-current" />
          <span>RSS</span>
        </a>
      </div>
    </section>

    {
      featuredPosts.length > 0 && (
        <section
          id="featured"
          class:list={[
            "pt-10 pb-6",
            { "border-b border-border": recentPosts.length > 0 },
          ]}
        >
          <h2 class="mb-2 text-xs font-semibold uppercase tracking-widest text-foreground/40">
            주요 글
          </h2>
          <ul>
            {featuredPosts.map(data => (
              <Card variant="h3" {...data} />
            ))}
          </ul>
        </section>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-10 pb-6">
          <h2 class="mb-2 text-xs font-semibold uppercase tracking-widest text-foreground/40">
            최근 글
          </h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        전체 글 보기
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
